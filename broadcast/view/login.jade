extends header
block link
    link(href='/static/css/signin.css',rel="stylesheet")
block content
    div.text-center.body
        form.form-signin
            h1.h3.mb-3 在线聊天系统
            label(for='inputEmail').sr-only 账号
            input(type='text',placeholder='账号')#inputEmail.form-control
            label(for='inputPassword').sr-only 密码
            input(type='password',placeholder='密码')#inputPassword.form-control
            div.check-box.mb-3
                label
                    input(type='checkbox')
                    span 记住密码
            buttonbtn.btn-lg.btn-primary.btn-block(type='submit')#login 登录
 block script
     script(src='/static/js/login.js')

